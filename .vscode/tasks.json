{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Game",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/holotrack.Desktop/holotrack.Desktop.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Tests",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/holotrack.Tests/holotrack.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}